
<h1>Join us!!</h1>
<div><%= @error_message %></div>
<form class="input_form" action="/user" method="post">
  <% if @user %>
    <div class="form-group row">
      <label for="firstname-text-input" class="col-sm-1 col-form-label">Fist Name</label>
      <div class="col-sm-3">
        <input class="form-control" type="text" id="firstname-text-input" name="first_name" value="<%= @user.first_name %>" required>
      </div>
    </div>
    <div class="form-group row">
      <label for="lastname-text-input" class="col-sm-1 col-form-label">Last name</label>
      <div class="col-sm-3">
        <input class="form-control" id="lastname-text-input" type="text" name="last_name" value="<%= @user.last_name %>" required>
      </div>
    </div>
    <div class="form-group row">
      <label for="email-text-input" class="col-sm-1 col-form-label">Email</label>
      <div class="col-sm-3">
        <input class="form-control" id="email-text-input" type="email" name="email" value="<%= @user.email %>" required>
      </div>
    </div>
    <div class="form-group row">
      <label for="phonenum-text-input" class="col-sm-1 col-form-label">Phone number</label>
      <div class="col-sm-3">
        <input class="form-control" id="phonenum-text-input" type="text" name="phone_number" value="<%= @user.phone_number %>" required>
      </div>
    </div>
    <div class="form-group row">
      <label for="address-text-input" class="col-sm-1 col-form-label">Address</label>
      <div class="col-sm-3">
        <input class="form-control" id="address-text-input" type="text" name="address" value="<%= @user.address %>" required>
      </div>
    </div>
    <div class="form-group row">
      <label for="idnum-text-input" class="col-sm-1 col-form-label">Id number</label>
      <div class="col-sm-3">
        <input class="form-control" id="idnum-text-input" type="text" name="id_number" value="<%= @user.user_number %>" required>
      </div>
    </div>

  <% else %>
  <div class="form-group row">
    <label for="firstname-text-input" class="col-sm-1 col-form-label">Fist Name</label>
    <div class="col-sm-3">
      <input class="form-control" type="text" id="firstname-text-input" name="first_name" required>
    </div>
  </div>
  <div class="form-group row">
    <label for="lastname-text-input" class="col-sm-1 col-form-label">Last name</label>
    <div class="col-sm-3">
      <input class="form-control" id="lastname-text-input" type="text" name="last_name" required>
    </div>
  </div>
  <div class="form-group row">
    <label for="email-text-input" class="col-sm-1 col-form-label">Email</label>
    <div class="col-sm-3">
      <input class="form-control" id="email-text-input" type="email" name="email" required>
    </div>
  </div>
  <div class="form-group row">
    <label for="phonenum-text-input" class="col-sm-1 col-form-label">Phone number</label>
    <div class="col-sm-3">
      <input class="form-control" id="phonenum-text-input" type="text" name="phone_number" required>
    </div>
  </div>
  <div class="form-group row">
    <label for="address-text-input" class="col-sm-1 col-form-label">Address</label>
    <div class="col-sm-3">
      <input class="form-control" id="address-text-input" type="text" name="address" required>
    </div>
  </div>
  <div class="form-group row">
    <label for="idnum-text-input" class="col-sm-1 col-form-label">Id number</label>
    <div class="col-sm-3">
      <input class="form-control" id="idnum-text-input" type="text" name="id_number" required>
    </div>
  </div>
  <% end %>

  <div class="form-group row">
    <label for="password-text-input" class="col-sm-1 col-form-label">Password</label>
    <div class="col-sm-3">
      <input class="form-control" id="password-text-input" type="password" name="password" required>
    </div>
  </div>
  <div class="form-group row">
    <label for="password-text-input" class="col-sm-1 col-form-label">Retype the password</label>
    <div class="col-sm-3">
      <input class="form-control" id="password-text-input" type="password" name="password_confirmation" required>
    </div>
  </div>
  <button class="btn" type="submit">Sign up</button>
</form><br>
<a href="/">Home</a>
